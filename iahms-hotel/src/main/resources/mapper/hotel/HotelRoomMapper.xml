<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.apkr.hotel.mapper.HotelRoomMapper">

    <resultMap id="HotelRoomResult" type="HotelRoom">
        <id property="roomId" column="room_id" />
        <result property="roomTypeId" column="room_type_id" />
        <result property="number" column="number" />
        <result property="price" column="price" />
        <result property="dirtyFlag" column="dirty_flag" />
        <result property="delFlag" column="del_flag" />
        <result property="remark" column="remark" />
        <result property="revision" column="revision" />
        <result property="createBy" column="create_by" />
        <result property="createTime" column="create_time" />
        <result property="updateBy" column="update_by" />
        <result property="updateTime" column="update_time" />
    </resultMap>

    <sql id="selectRoomStateRecordVo">
        SELECT room_id, room_type_id, number, price, dirty_flag, del_flag, remark, revision, create_by, create_time,
            update_by, update_time
        FROM hotel_room
    </sql>

    <select id="selectRoomList" parameterType="HotelRoom" resultMap="HotelRoomResult">
        <include refid="selectRoomStateRecordVo" />
        <where>
            <if test="roomId != null">
                AND room_id = #{roomId}
            </if>
            <if test="roomTypeId != null">
                AND room_type_id = #{roomTypeId}
            </if>
            <if test="number != null and number != ''">
                AND number = #{number}
            </if>
            <if test="price != null">
                AND price = #{price}
            </if>
            <if test="dirtyFlag != null">
                AND dirty_flag = #{dirtyFlag}
            </if>
            <if test="delFlag != null">
                AND del_flag = #{delFlag}
            </if>
        </where>
    </select>

    <insert id="insertRoom" parameterType="HotelRoom" useGeneratedKeys="true" keyProperty="roomId">
        INSERT INTO hotel_room(
        <if test="roomTypeId != null">room_type_id,</if>
        <if test="number != null and number != ''">number,</if>
        <if test="price != null">price,</if>
        <if test="dirtyFlag != null">dirty_flag,</if>
        <if test="delFlag != null">del_flag,</if>
        <if test="remark != null and remark != ''">remark,</if>
        <if test="createBy != null">create_by,</if>
            create_time
        ) VALUES(
        <if test="roomTypeId != null">#{roomTypeId},</if>
        <if test="number != null and number != ''">#{number},</if>
        <if test="price != null">#{price},</if>
        <if test="dirtyFlag != null">#{dirtyFlag},</if>
        <if test="delFlag != null">#{delFlag},</if>
        <if test="remark != null and remark != ''">#{remark},</if>
        <if test="createBy != null">#{createBy},</if>
            current_timestamp()
        )
    </insert>

    <update id="updateRoom" parameterType="HotelRoom">
        UPDATE hotel_room
        <set>
            <if test="roomTypeId != null">room_type_id = #{roomTypeId},</if>
            <if test="number != null and number != ''">number = #{number},</if>
            <if test="price != null">price = #{price},</if>
            <if test="dirtyFlag != null">dirty_flag = #{dirtyFlag},</if>
            <if test="delFlag != null">del_flag = #{delFlag},</if>
            <if test="remark != null and remark != ''">remark = #{remark},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            update_time = current_timestamp()
        </set>
        WHERE room_id = #{roomId}
    </update>

    <delete id="deleteRoomById" parameterType="Long">
        UPDATE hotel_room SET del_flag = true WHERE room_id = #{roomId}
    </delete>

    <delete id="deleteRoomByIds" parameterType="Long[]">
        UPDATE hotel_room SET del_flag = true WHERE room_id IN
        <foreach collection="array" item="roomId" open="(" separator="," close=")">
            #{roomId}
        </foreach>
    </delete>

</mapper>